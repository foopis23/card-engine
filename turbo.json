{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"src/**",
				"package.json",
				"bun.lock"
			],
			"outputs": [
				"dist/**"
			]
		},
		"lint": {
			"inputs": [
				"src/**",
				"package.json",
				"bun.lock"
			]
		},
		"format": {
			"inputs": [
				"src/**",
				"package.json",
				"bun.lock"
			]
		}
	}
}